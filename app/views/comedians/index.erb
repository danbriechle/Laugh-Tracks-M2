
<section class="statistics">
  <h1>Statistics</h1>
  <ul>
    <li><%= "Average Age #{@average_age.to_f.round(2)}" %></li>
    <li><%= "Average Runtime #{@average_runtime.to_f.round(2)}" %></li>
    <li><%= "Total Specials: #{@specials.count}"%></li>
  </ul>
  <ul>
    <h3>Cities</h3>
      <% @comedians.each do |comedian| %>
        <li><%=comedian.city%></li>
      <% end %>
  </ul>
  </section>
  <section>
  <% @comedians.each do |comedian| %>
    <ul id="comic-<%= comedian.id %>">
      <li><%= comedian.name %></li>
      <li>age - <%= comedian.age %></li>
      <li>city - <%= comedian.city %></li>
      <ul>
        <a>Specials</a>
        <% comedian.specials.each do |special| %>
          <li> <%= special.name %> </li>
          <img src=<%=special.img %> />
          <li><%= special.runtime %> mins</li>
          <% end %>
          <li><%= "Total Specials: #{comedian.specials.count}"%></li>
      </ul>
    </ul>
  <% end %>
</section>
